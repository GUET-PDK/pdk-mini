/* 我的页面 */

/* 背景图 */
.backg {
  width: 100%;
  height: 450rpx;
  position: fixed;
  left: 0;
  top: 0;
  border-radius: 20rpx;
  background-image: linear-gradient(to top, #30cfd0 0%, #330867 100%);
  z-index: 1;
}
.backg image {
  width: 100%;
  height: 100%;
  border-radius: 25rpx;
}

/* 用户简介 */
.user-intro {
  width: 100%;
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  z-index: 2;
}
.user-intro image {
  height: 128rpx;
  width: 128rpx;
}
.user-intro .user-name {
  margin-top: 12rpx;
  font-size: 36rpx;
  font-weight: 600;
}
.user-intro view:last-child {
  margin-top: 6rpx;
  font-size: 30rpx;
}

/* 用户数据概况栏 */
.user-data-bar {
  width: 88%;
  display: flex;
  justify-content: space-between;
  margin: 24rpx auto;
  color: white;
  z-index: 2;
}
.user-data-bar .bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.bar-item view:first-child {
  font-size: 32rpx;
  font-weight: 600;
}

/* 用户列表 */
.user-list {
  width: 100%;
  flex: 1 1 auto; 
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  z-index: 2;
}
.user-list .main-list {
  margin-top: 30rpx;
  width: 90%;
  height: 90%;
}
.main-list .list-item {
  height: 100rpx;
  margin: 12rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2rpx solid #cfd9df;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  border-radius: 10rpx;
}
.list-item view {
  display: flex;
}
.list-item image {
  width: 42rpx;
  height: 42rpx;
  margin: auto 12rpx;
}
.list-item image:last-child {
  margin-right: 24rpx;
}

.version {
  position: fixed;
  bottom: 0;
  margin-bottom: 6rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999;
}