<!--pages/addAddr/addAddr.wxml-->
<view class='list'>
    <form catchsubmit="newAddr">
        <view class='listItem'>
            <label>姓名</label>
            <input placeholder='{{default.name}}' name="name"></input>
        </view>
        <view class='listItem'>
            <label>手机号码</label>
            <input placeholder='{{default.phone}}' name="phone"></input>
        </view>
        <view class='listItem addr'>
            <label>所在地区</label>
            <picker mode="region" bindchange="bindRegionChange" value="{{region}}" name="region" disabled="true">
                <text>{{region[0]}},{{region[1]}},{{region[2]}}</text>
            </picker>
            <text class="iconfont icon-jinrujiantou"></text>
        </view>
        <view class='listItem'>
            <label>详细地址</label>
            <input placeholder='{{default.addr}}' name="addr"></input>
        </view>
        <view class='listItem'>
            <label>默认设置</label>
            <switch checked="{{default.flag}}" bindchange="switch1Change" name="flag"/>
        </view>

        <button class='saveAddr' type="primary" form-type="submit">保 存</button>
    </form>
</view>