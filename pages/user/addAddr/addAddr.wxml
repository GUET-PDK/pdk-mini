<!--pages/addAddr/addAddr.wxml-->
<view class='list'>
    <form catchsubmit="newAddr">
        <view class='listItem'>
            <label>姓名</label>
            <input placeholder='{{default.name}}' value="{{name}}" name="name"></input>
        </view>
        <view class='listItem'>
            <label>手机号码</label>
            <input placeholder='{{default.phone}}' value="{{phone}}" name="phone"></input>
        </view>
        <view class='listItem addr'>
            <label>所在地区</label>
            <picker mode="selector" range="{{region}}" bindchange="bindRegionChange" value="{{selcompus}}" name="selcompus">
                <text>桂林电子科技大学,{{selcompus}}</text>
            </picker>
            <text class="iconfont icon-jinrujiantou"></text>
        </view>
        <view class='listItem'>
            <label>详细地址</label>
            <input placeholder='{{default.addr}}' value="{{addr}}" name="addr"></input>
        </view>
        <view class='listItem'>
            <label>默认设置</label>
            <switch checked="{{default.flag}}" bindchange="switch1Change" value="flag" name="flag"/>
        </view>
        <button class='saveAddr' type="primary" form-type="submit">保 存</button>
    </form>
</view>