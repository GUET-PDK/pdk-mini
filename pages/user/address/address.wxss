page {
  background-color: #efeff4;
}

.addr-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}

.addr-item {
  width: 90%;
  padding: 20rpx 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom: 1px #e8e8e8 solid;
}

.addr-item:nth-child(1) {
  border-top: 1px #e8e8e8 solid;
}
/* 地址内容 */
.addr-top {
  width: 96%;
  margin: 0 0 10rpx 10rpx;
  display: flex;
  align-items: center;
  font-weight: 600;
}
.name-iphone {
  display: flex;
  width: 66%;
}
.name-iphone text:last-child {
  margin-left: auto;
}
/* 按钮样式 */
.bt-class {
  margin-left: auto;
}
.bt-class button {
  font-size: 20rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 36rpx;
  background-color: #fff;
  color: #f44225;
  border-radius: 18rpx;
  border: 2rpx solid #f44225;
}

.addr-bottom {
  display: flex;
  justify-content: space-between;
}

.addr-buttom text:nth-child(2) {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
}

/* 底部固定 */
.bottom-button {
  display: flex;
  align-items: center;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.bottom-button view {
  height: 98rpx;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #282828;
  border: 2rpx solid #e8e8e8;
}

/* 没有数据显示 */
.noData {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #efeff4;
}

.emptyData {
  padding: 24rpx;
  margin-bottom: 120rpx;
  text-align: center;
  color: #c5c5c5;
  font-size: 24rpx;
}
