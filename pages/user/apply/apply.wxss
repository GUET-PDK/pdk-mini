.container {
  padding: 20rpx 10rpx;
}

.main {
  padding: 30rpx;
  box-shadow: 0 0 10rpx 6rpx rgba(0, 0, 0, 0.07);
  border-radius: 10rpx;
  margin-top: 80rpx;
}
.avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 130rpx;
  overflow: hidden;
  margin: auto;
  position: relative;
  top: -100rpx;
  border: 5rpx solid #ffcc66;
}
.avatar image {
  height: 100%;
  width: 100%;
}

.item {
  padding: 30rpx 0 10rpx 0;
}
.border-bottom {
  border-bottom: 2rpx #e1e1e1 solid;
}
.flex-j-between {
  display: flex;
  justify-content: space-between;
}
.bold {
  font-weight: bold;
}
.input-class {
  font-size: 28rpx;
  text-align: right;
}
.upload-box {
  margin-top: 20rpx;
  width: 100%;
  height: 320rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 42rpx;
  color: #999;
  border: 1px dotted #aaa;
  border-radius: 10rpx;
  overflow: hidden;
  background-size: cover;
  background-position: center;
}

.tip {
  margin-left: 6rpx;
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}

.btn {
  margin-top: 30rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  border-radius: 100rpx;
  background: #07c160;
}
.btn:active {
  background: green;
}