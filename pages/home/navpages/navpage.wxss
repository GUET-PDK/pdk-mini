/* 首页导航标签页面 */
/* 顶部标题 */
.title-top {
	z-index: 2;
	font-weight: 600;
	margin: 20rpx auto;
	color:#3E54AC;
}

/* 主要表单区域 */
.main-from {
	width: 92%;
	flex: 1 1 auto;
	background-color: #fff;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	border-top-left-radius: 30rpx;
	border-top-right-radius: 30rpx;
	z-index: 2;
}

/* 表单顶部地址栏 */
.addr-top {
	width: 95%;
	height: 90rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	text-align: center;
}

/* 滑动区域 */
.main-section {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
}
/* 表单子项 */
.main-item {
	width: 95%;
	padding: 20rpx 0;
	font-size: 32rpx;
}


/* 子项-集中配送时间 */
.item-time {
	display: flex;
	flex-direction: column;
}
.time-lable text:last-child {
	color: #333;
}
.time-option {
	display: flex;
	flex-wrap: wrap;
}


/* 时间选项 */
.time-select {
    background-color: #F8F8F8;
    color: #666;
    padding: 10rpx 20rpx;
    margin: 12rpx 20rpx 0 0;
    border-radius: 10rpx;
}

.time-selected {
    color: #FFF;
}

/* 常用功能 */
.font-16 {
	font-size: 32rpx;
}

.font-18 {
	font-size: 36rpx;
}

.border-bottom-line {
	border-bottom: 1px #e8e8e8 solid;
}