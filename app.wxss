/**app.wxss**/
@import '/static/css/ifontCss.wxss'; /*引入字体图标库 */

/* 各页面主体布局 */
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
}

/* 各页面顶部CSS背景图 */
.bg-image-top {
	width: 100%;
	height: 320rpx;
	position: fixed;
	top: 0;
	left: 0;
	border-radius: 12rpx;
	overflow: hidden;
	z-index: 1;
}
.bg-image-top image {
	width: 100%;
	height: 100%;
}
